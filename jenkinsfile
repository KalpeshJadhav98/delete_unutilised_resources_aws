pipeline {
    agent any

    parameters {
        string(name: 'AWS_DEFAULT_REGION', defaultValue: 'us-east-1', description: 'AWS region')
    }

    environment {
        PYTHON = "python3"
        AWS_ACCESS_KEY_ID = credentials('aws_access_key_id')
        AWS_SECRET_ACCESS_KEY = credentials('aws_secret_key')
        AWS_DEFAULT_REGION = "${params.AWS_DEFAULT_REGION}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/KalpeshJadhav98/delete_unutilised_resources_aws.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    ${PYTHON} -m pip install --upgrade pip
                    ${PYTHON} -m pip install boto3 botocore
                '''
            }
        }

        stage('Run Script') {
            steps {
                sh '''
                    echo "Running cleanup in region $AWS_DEFAULT_REGION"
                    ${PYTHON} deleted_unused_ebs_volumes_across_regions.py
                '''
            }
        }
    }

    post {
        success { echo 'EBS cleanup executed successfully ✅' }
        failure { echo 'EBS cleanup failed ❌' }
    }
}

pipeline {
    agent any

    parameters {
        string(name: 'AWS_DEFAULT_REGION', defaultValue: 'ap-south-1', description: 'AWS region')
    }

    environment {
        PYTHON = "python3"
        AWS_DEFAULT_REGION = "${params.AWS_DEFAULT_REGION}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/KalpeshJadhav98/delete_unutilised_resources_aws.git'
            }
        }

        stage('Install Python & Dependencies') {
            steps {
                sh '''
                    echo "Checking Python version"
                    ${PYTHON} --version || sudo apt-get install -y python3

                    echo "Upgrading pip"
                    ${PYTHON} -m ensurepip --upgrade || ${PYTHON} -m pip install --upgrade pip

                    echo "Installing boto3 and botocore"
                    ${PYTHON} -m pip install --upgrade boto3 botocore
                '''
            }
        }

        stage('Run Cleanup Script') {
            steps {
                // Use AWS Credentials plugin
                withAWS(credentials: 'my_aws_credentials_id', region: "${params.AWS_DEFAULT_REGION}") {
                    sh '''
                        echo "Running EBS cleanup in region $AWS_DEFAULT_REGION"
                        
                        # Run Python cleanup script
                        ${PYTHON} delete_unused_ebs_volume_across_regions.py
                    '''
                }
            }
        }
    }

    post {
        success { echo 'EBS cleanup executed successfully ✅' }
        failure { echo 'EBS cleanup failed ❌' }
    }
}

pipeline {
    agent any

    parameters {
        string(
            name: 'AWS_DEFAULT_REGION', 
            defaultValue: 'us-east-1', 
            description: 'AWS region to run the cleanup script'
        )
    }

    environment {
        PYTHON = "python3"
        AWS_DEFAULT_REGION = "${params.AWS_DEFAULT_REGION}"
    }

    stages {
        stage('Checkout') {
            steps {
                // Replace with your Git repository URL
                git branch: 'main', url: https://github.com/KalpeshJadhav98/delete_unutilised_resources_aws.git
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    ${PYTHON} -m pip install --upgrade pip
                    ${PYTHON} -m pip install boto3 botocore
                '''
            }
        }

        stage('Run EBS Cleanup Script') {
            steps {
                sh '''
                    echo "Running EBS cleanup in region: $AWS_DEFAULT_REGION"
                    ${PYTHON} deleted_unused_ebs_volumes_across_regions.py --region $AWS_DEFAULT_REGION
                '''
            }
        }
    }

    post {
        success {
            echo 'EBS cleanup executed successfully ✅'
        }
        failure {
            echo 'EBS cleanup failed ❌'
        }
    }
}
